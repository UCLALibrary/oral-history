<% doc_presenter = index_presenter(document) %> 
<%# default partial to display solr document fields in catalog index view -%>
<dl class="document-metadata dl-horizontal dl-invert">
  
  <% index_fields(document).each do |field_name, field| -%>
    <% if should_render_index_field? document, field %>
	    <dt class="blacklight-<%= field_name.parameterize %>"><%= render_index_field_label document, field: field_name %></dt>
      <% if field_name == "audio_b" && doc_presenter.field_value(field_name) == "T" %>
        <dd class="blacklight-<%= field_name.parameterize %>"><span class="glyphicon glyphicon-headphones"></span></dd>
      <% elsif field_name == "audio_b" && doc_presenter.field_value(field_name) == "F"%>
      <dd class="blacklight-<%= field_name.parameterize %>"><span class="glyphicon glyphicon-ban-circle"></span></dd>
      <% else %>
        <dd class="blacklight-<%= field_name.parameterize %>"><%= doc_presenter.field_value field_name %></dd>
      <% end %>
    <% end -%>
  <% end -%>

</dl>

